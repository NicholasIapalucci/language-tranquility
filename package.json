{
  "name": "language-tranquility",
  "displayName": "Tranquility",
  "description": "Language support for Tranquility",
  "version": "0.0.1",
  "main": "./public/extension.js",
  "scripts": {
    "build": "tsc"
  },
  "engines": {
    "vscode": "^1.72.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "tranquility",
        "aliases": [
          "tranquility",
          "tranquility"
        ],
        "extensions": [
          ".t",
          ".tranq"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "dark": "./assets/icon.png",
          "light": "./assets/icon.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "tranquility",
        "scopeName": "source.tranquility",
        "path": "./syntaxes/tranquility.tmLanguage.json"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:tranquility"
  ],
  "devDependencies": {
    "child_process": "^1.0.2",
    "fs": "^0.0.1-security",
    "path": "^0.12.7",
    "ts-loader": "^9.4.1",
    "typescript": "^4.8.4",
    "vscode": "^1.1.37",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  }
}
